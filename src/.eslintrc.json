{
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "modules": true,
      "restParams": true,
      "spread": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended",
    "plugin:promise/recommended"
  ],
  "env": {
    "es2020": true,
    "node": true,
    "browser": false
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-unused-vars": "error",
    "no-undef": "error",
    "block-scoped-var": "error",
    "require-jsdoc": "off",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ]
  }
}
